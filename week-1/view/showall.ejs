<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/static/showall.css">
</head>

<body>
    <div id="outflex">
        <!-- <div></div> -->
        <div>
            <h1>All Emails</h1>
            <div class="itembox">
                <% for (let i=0; i < items.length; i++) { %>
                    <div class="indi">
                        <div class="single">
                            Email :- <%= items[i].email_id %>
                        </div>
                        <div class="single">
                            Authority :- <%= items[i].authority_name %>
                        </div>
                    </div>
                    <% } %>
            </div>
            <div class="indi" id="del">
                <div>
                    <form action="/delete" method="POST">
                        <label>Email Id</label>
                        <input name="emailid" type="text" id="emailfield" />
                        <button type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        
        <div id="box">
            
            <div id="inner">
                <form method="POST" action="/">
                    <div class="perso">
                        <label>emailid</label>
                    </div>
                    <input type="text" name="emailid" placeholder="example@daiict.ac.in" />
                    <br>
                    <div class="perso">
                        <label>authorityname</label>
                    </div>
                    <input type="text" name="authorityname" />
                    <br>
                    <div class="perso">
                        <button type="submit">Generate</button>
                    </div>
                </form>
            </div>
        </div>
        <div></div><div></div><div></div>
    </div>

</body>

</html>